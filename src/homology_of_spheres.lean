       rw [add_comm, ne.def, ‚Üê eq_sub_iff_add_eq, ‚Üê sub_smul],
       rw smul_right_inj,
       { exact hb.right, },
       { rw [ne.def, sub_eq_zero],
         apply ne.symm, apply ne_of_lt, refine lt_of_le_of_lt hu _,
         apply hr3, exact hb.right } },
