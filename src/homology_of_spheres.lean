    { refine ‚ü®(b.hom y).to_fun 0, (b.hom y).to_fun 1, _‚ü©, ext i, fin_cases i; simp; refl },
    obtain ‚ü®r, s, h‚ü© := this, replace h := congr_arg b.inv h,
    rw [‚Üê comp_apply, b.hom_inv_id, Module.id_apply, map_add, map_smul, map_smul] at h,
    rw h at hy,
