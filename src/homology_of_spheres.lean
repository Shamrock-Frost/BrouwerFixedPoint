    rw [‚Üê @submodule.top_coe ‚Ñù (euclidean_space ‚Ñù (fin n)), set_like.coe_subset_coe, ‚Üê eq_top_iff],
    exact (pi.basis_fun ‚Ñù (fin n)).span_eq }
end.

