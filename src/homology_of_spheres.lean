                                   arrow.mk Œ¥, 
                                   arrow.mk ((homology_functor (Module R) (complex_shape.down ‚Ñï) k).map i)] :=
              (homological_complex.six_term_exact_seq i
                 ((coker_functor_proj (chain_complex (Module R) ‚Ñï)).app (arrow.mk i))
